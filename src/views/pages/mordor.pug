extends ../layout

block head
  title Mordor

block content
   //#Immaginemordor.jumbotron

   .bs-example
     #myCarousel.carousel.slide(data-ride='carousel')
      // Carousel indicators
      ol.carousel-indicators
          li.active(data-target='#myCarousel', data-slide-to='0')
          li(data-target='#myCarousel', data-slide-to='1')
          li(data-target='#myCarousel', data-slide-to='2')
          li(data-target='#myCarousel', data-slide-to='3')
      // Wrapper for carousel items
      .carousel-inner
        .item.active
          img.carousel-img(src='/images/paludimorte.jpg', alt='First Slide')
        .item
          img.carousel-img(src='/images/mordor1.jpg', alt='Second Slide')
        .item
          img.carousel-img(src='/images/orcs1.jpg', alt='Third Slide')
        .item
          img.carousel-img(src='/images/siege1.jpg', alt='Fourth Slide')
      // Carousel controls
      a.carousel-control.left(href='#myCarousel', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.carousel-control.right(href='#myCarousel', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
